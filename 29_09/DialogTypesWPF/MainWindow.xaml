<Window x:Class="DialogTypesWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
 Title="Модальные и немодальные окна" Height="270" Width="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200*" />
            <ColumnDefinition Width="200*" />
        </Grid.ColumnDefinitions>
        <Button Content="Модальное" 
 HorizontalAlignment="Stretch"
 VerticalAlignment="Stretch"
 Margin="2"
 Name="button1"
 Grid.Column="0"
 Click="button1_Click" />
        <Button Content="Немодальное"
 HorizontalAlignment="Stretch"
 VerticalAlignment="Stretch"
 Margin="2"
 Name="button2"
 Grid.Column="1"
 Click="button2_Click" />
    </Grid>
</Window>