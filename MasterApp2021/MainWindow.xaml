<Window x:Class="MasterApp2021.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MasterApp2021"
        mc:Ignorable="d"
        Title="Подай на 16" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height = "75"/>
            <RowDefinition Height = "69*"/>
            <RowDefinition Height = "30" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Background="#FFF6F7BB"/>
        <Grid Grid.Row="0"  Background="#FFEAE66E"></Grid>
        <Image Source ="/service_logo.png" Width="100" HorizontalAlignment="Left"></Image>
        <Button Content ="Назад" HorizontalAlignment ="Right" Name = "BtnBack" Click="BtnBack_Click"></Button>
        <TextBlock  HorizontalAlignment="Center" Text="{Binding ElementName=FrameMain, Path=Content.Title}">
        </TextBlock>
        <Frame x:Name="FrameMain" NavigationUIVisibility="Hidden" Grid.Row="1"></Frame>
    </Grid>
</Window>
